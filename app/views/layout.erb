<!doctype html>
<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/normalize.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300italic,700italic,700,300">
        <link rel="stylesheet" href="/stylesheets/lib.css">
        <link rel="stylesheet" href="/stylesheets/app.css">
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;500;700&display=swap" rel="stylesheet">
        <link rel="icon" href="/img/fin.png">
        <title>Finstagram</title>
    </head>
    <body>
        <header>
            <h1>
                <a style="padding: 10%;" href="/">Finstagram</a>
            </h1>
            <div class="login-info">
                <% if current_user %>
                    <%= current_user.username %>
                    <a style="padding-left: 10px;" href="/logout">Logout</a>
                <% else %>
                    <a href="/login">Login</a>
                    <a href="/signup">Signup</a>
                <% end %>
            </div>
        </header>   
        <main role="main"> 
        <%= yield %>
        </main>
    </body>
</html>